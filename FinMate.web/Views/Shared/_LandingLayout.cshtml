@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "FinMate";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - FinMate</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root{
            --brand1:#6D28D9;   /* purple */
            --brand2:#9333EA;   /* pink-purple */
        }

        body{
            font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            background: radial-gradient(1200px 600px at 10% 10%, rgba(147,51,234,.22), transparent 60%),
                        radial-gradient(1200px 600px at 90% 10%, rgba(109,40,217,.18), transparent 60%),
                        #ffffff;
        }

        .landing-nav{
            background: linear-gradient(90deg, var(--brand1), var(--brand2));
            box-shadow: 0 12px 35px rgba(0,0,0,.14);
        }

        .brand{
            font-weight: 900;
            font-size: 34px;
            letter-spacing: .2px;
        }

        .nav-link{
            color: rgba(255,255,255,.92) !important;
            font-weight: 600;
        }
        .nav-link:hover{ color:#fff !important; }

        .btn-soft{
            background: rgba(255,255,255,.18);
            border: 1px solid rgba(255,255,255,.25);
            color: #fff;
            font-weight: 800;
            border-radius: 14px;
            padding: .55rem 1rem;
        }
        .btn-soft:hover{ background: rgba(255,255,255,.28); color:#fff; }

        .btn-white{
            background: #fff;
            color: #111827;
            font-weight: 900;
            border-radius: 14px;
            padding: .55rem 1rem;
        }
        .btn-white:hover{ background:#f3f4f6; }

        .hero{
            padding: 70px 0 50px;
        }

        .hero-card{
            border-radius: 26px;
            background: #fff;
            box-shadow: 0 18px 65px rgba(2,6,23,.10);
            overflow: hidden;
        }

        .hero-left{ padding: 52px; }

        .pill{
            display:inline-block;
            padding: .35rem .7rem;
            border-radius: 999px;
            background: rgba(109,40,217,.12);
            color: var(--brand1);
            font-weight: 800;
            font-size: 13px;
        }

        .hero-title{
            font-size: 46px;
            font-weight: 950;
            line-height: 1.05;
            margin-top: 14px;
        }

        .hero-sub{
            margin-top: 14px;
            font-size: 16px;
            color: #475569;
        }

        .btn-brand{
            background: linear-gradient(90deg, var(--brand1), var(--brand2));
            border: 0;
            font-weight: 900;
            border-radius: 14px;
            padding: .8rem 1.2rem;
        }

        .btn-outline-brand{
            border: 2px solid rgba(109,40,217,.35);
            color: var(--brand1);
            background: #fff;
            font-weight: 900;
            border-radius: 14px;
            padding: .8rem 1.2rem;
        }

        .hero-right{
            background: linear-gradient(135deg, rgba(109,40,217,.12), rgba(147,51,234,.10));
            padding: 26px;
            display:flex;
            justify-content:center;
            align-items:center;
            min-height: 430px;
        }

        .mock{
            width:100%;
            max-width:520px;
            background:#0b1220;
            color:#fff;
            border-radius:22px;
            padding:18px;
            box-shadow: 0 20px 70px rgba(2,6,23,.35);
        }

        .mock .bar{
            width: 90px;
            height: 10px;
            background: rgba(255,255,255,.18);
            border-radius: 999px;
            margin-bottom: 14px;
        }

        .kpi{
            margin-top: 12px;
            border-radius: 16px;
            padding: 14px;
            background: rgba(255,255,255,.06);
            border: 1px solid rgba(255,255,255,.12);
        }

        .kpi b{ font-size: 18px; }
        .kpi small{ color: rgba(255,255,255,.7); }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg landing-nav py-3">
        <div class="container">
            <a class="navbar-brand text-white brand" asp-controller="Home" asp-action="Index">FinMate</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#landingNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="landingNav">
                <ul class="navbar-nav mx-auto gap-lg-3">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            Features
                        </a>

                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Expense Tracking</a></li>
                            <li><a class="dropdown-item" href="#">Income Tracking</a></li>
                            <li><a class="dropdown-item" href="#">Monthly Budgets</a></li>
                            <li><a class="dropdown-item" href="#">Goals</a></li>
                            <li><a class="dropdown-item" href="#">Summary Dashboard</a></li>
                            <li><a class="dropdown-item" href="#">Reminders + Email Alerts</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Private User Accounts</a></li>
                        </ul>
                    </li>

                    <li class="nav-item"><a class="nav-link" href="#about">About Us</a></li>
                    <li class="nav-item"><a class="nav-link" href="#help">Help</a></li>
                </ul>


                <div class="d-flex gap-2">
                    <a class="btn btn-soft" asp-controller="Auth" asp-action="Register">Sign up</a>
                    <a class="btn btn-white" asp-controller="Auth" asp-action="Login">Log in</a>
                </div>
            </div>
        </div>
    </nav>

    @RenderBody()

    
    <footer class="py-4 mt-5" style="background:#ffffff; border-top:1px solid rgba(2,6,23,.08);">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
            <div class="text-secondary">
                © @DateTime.Now.Year FinMate. All rights reserved.
            </div>

            <div class="d-flex gap-3">
                <a class="text-secondary text-decoration-none" asp-controller="Legal" asp-action="Privacy">Privacy Policy</a>
                <a class="text-secondary text-decoration-none" asp-controller="Legal" asp-action="Terms">Terms & Conditions</a>
                <a class="text-secondary text-decoration-none" asp-controller="Support" asp-action="Contact">Contact</a>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
