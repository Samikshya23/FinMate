@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "FinMate";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - FinMate</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            --brand1: #6D28D9;
            --brand2: #9333EA;
        }

        body {
            font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            background: #f6f7fb;
        }

        .app-nav {
            background: linear-gradient(90deg, var(--brand1), var(--brand2));
            box-shadow: 0 12px 35px rgba(0,0,0,.14);
        }

        .brand {
            font-weight: 900;
            font-size: 26px;
            color: #fff !important;
            text-decoration: none;
        }

        .nav-link {
            color: rgba(255,255,255,.92) !important;
            font-weight: 700;
        }

            .nav-link:hover {
                color: #fff !important;
            }

        .card-soft {
            border: 0;
            border-radius: 18px;
            box-shadow: 0 16px 50px rgba(2,6,23,.08);
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg app-nav py-3">
        <div class="container">
            <a class="brand" asp-controller="Dashboard" asp-action="Index">FinMate</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#appNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="appNav">
                <ul class="navbar-nav me-auto gap-lg-3">
                  
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Expenses" asp-action="Index">Expenses</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Budget" asp-action="Index">Budgets</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Incomes" asp-action="Index">Incomes</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Goals" asp-action="Index">Goals</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reminder" asp-action="Index">Reminders</a>
                        </li>
                    </ul>

                

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Account
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">Profile</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>

            </div>
        </div>
    </nav>

    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
