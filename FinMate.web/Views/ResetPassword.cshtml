@model FinMate.web.Models.ResetPasswordRequest
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="bg-white rounded-4 shadow-sm p-4 p-md-5">
                <h2 class="fw-bold mb-1">Reset Password</h2>
                <p class="text-secondary mb-4">Paste token from email and set a new password.</p>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form asp-action="ResetPassword" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input asp-for="Email" class="form-control form-control-lg" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Token</label>
                        <input asp-for="Token" class="form-control form-control-lg" placeholder="Paste token here" />
                        <span asp-validation-for="Token" class="text-danger"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">New Password</label>
                            <div class="input-group input-group-lg">
                                <input asp-for="NewPassword" class="form-control" id="newPass" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('newPass')">👁</button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Confirm Password</label>
                            <div class="input-group input-group-lg">
                                <input asp-for="ConfirmPassword" class="form-control" id="confirmPass" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('confirmPass')">👁</button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-brand w-100 mt-4">Reset Password</button>
                </form>

                <div class="text-center mt-4">
                    <a asp-action="Login" class="fw-bold text-decoration-none">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(id) {
            const x = document.getElementById(id);
            if (!x) return;
            x.type = (x.type === "password") ? "text" : "password";
        }
    </script>
}
