@model FinMate.web.Models.DashboardSummaryVm

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AppLayout.cshtml"; // use app layout after login

    // safety (if API failed and returned null)
    var m = Model ?? new FinMate.web.Models.DashboardSummaryVm();
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="fw-bold mb-0">Dashboard</h1>
            <div class="text-secondary">Your personal summary (private)</div>
        </div>

        <div class="text-secondary">
            @(!string.IsNullOrWhiteSpace(m.Month) ? m.Month : "")
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-warning">@ViewBag.Error</div>
    }

    <div class="row g-3 mt-2">
        <div class="col-md-3">
            <div class="bg-white rounded-4 shadow-sm p-4">
                <div class="text-secondary">Total Income</div>
                <div class="fs-2 fw-bold">
                    Rs. @m.TotalIncome.ToString("0.00")
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="bg-white rounded-4 shadow-sm p-4">
                <div class="text-secondary">Total Expense</div>
                <div class="fs-2 fw-bold">
                    Rs. @m.TotalExpense.ToString("0.00")
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="bg-white rounded-4 shadow-sm p-4">
                <div class="text-secondary">Remaining Budget</div>
                <div class="fs-2 fw-bold">
                    Rs. @m.RemainingBudget.ToString("0.00")
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="bg-white rounded-4 shadow-sm p-4">
                <div class="text-secondary">Next Reminder</div>
                <div class="fw-bold fs-5">
                    @(string.IsNullOrWhiteSpace(m.NextReminderTitle) ? "No reminder" : m.NextReminderTitle)
                </div>
            </div>
        </div>
    </div>
</div>
