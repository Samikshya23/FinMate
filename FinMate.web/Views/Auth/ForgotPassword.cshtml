@model FinMate.web.Models.ForgotPasswordRequest
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="bg-white rounded-4 shadow-sm p-4 p-md-5">
                <h2 class="fw-bold mb-1">Forgot Password</h2>
                <p class="text-secondary mb-4">Enter your email to receive reset instructions.</p>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form asp-action="ForgotPassword" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="you@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-brand w-100">Send Reset Email</button>
                </form>

                <div class="text-center mt-4">
                    <a asp-action="Login" class="fw-bold text-decoration-none">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
