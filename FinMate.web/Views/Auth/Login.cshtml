@model FinMate.web.Models.LoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="bg-white rounded-4 shadow-sm p-4 p-md-5">
                <h2 class="fw-bold mb-1">Welcome back</h2>
                <p class="text-secondary mb-4">Login to continue to FinMate.</p>

                @* ✅ Success message after Register *@
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                @* ✅ Error message (wrong password etc.) *@
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form asp-action="Login" method="post" novalidate>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input asp-for="Email"
                               class="form-control form-control-lg"
                               placeholder="you@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-2">
                        <label class="form-label fw-semibold">Password</label>

                        <div class="input-group input-group-lg">
                            <input asp-for="Password"
                                   class="form-control"
                                   id="loginPass"
                                   placeholder="Min 8 characters" />
                            <button class="btn btn-outline-secondary"
                                    type="button"
                                    onclick="togglePassword('loginPass')">
                                👁
                            </button>
                        </div>

                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end mb-3">
                        <a asp-controller="Auth" asp-action="ForgotPassword"
                           class="text-decoration-none fw-semibold">
                            Forgot password?
                        </a>
                    </div>

                    <button type="submit" class="btn btn-brand w-100">
                        Login
                    </button>
                </form>

                <div class="text-center mt-4">
                    <span class="text-secondary">Don’t have an account?</span>
                    <a asp-controller="Auth" asp-action="Register" class="fw-bold text-decoration-none">
                        Register
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePassword(id) {
            const input = document.getElementById(id);
            if (!input) return;
            input.type = (input.type === "password") ? "text" : "password";
        }
    </script>
}
