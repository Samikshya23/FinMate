@{
    ViewData["Title"] = "Welcome - FinMate";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">

            <!-- LEFT CONTENT -->
            <div class="col-md-6">
                <span class="badge bg-light text-purple mb-3">
                    Personal Finance Manager
                </span>

                <h1 class="hero-title mt-3">
                    Track budget,<br />
                    expenses & goals<br />
                    with <span class="text-purple">FinMate</span>.
                </h1>

                <p class="hero-subtitle mt-4">
                    FinMate helps you manage income & expenses, set monthly budgets,
                    plan goals, and get reminder emails —
                    with private accounts for each user.
                </p>

                <div class="mt-4">
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-primary btn-lg me-3">
                        Create account
                    </a>

                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary btn-lg">
                        Login
                    </a>
                </div>
            </div>

            <!-- RIGHT PREVIEW CARD -->
            <div class="col-md-6 mt-5 mt-md-0">
                <div class="preview-card">
                    <h5 class="text-white mb-4">FinMate Preview</h5>

                    <div class="preview-box">
                        <span>Total Income (This Month)</span>
                        <strong>Rs. 45,000</strong>
                    </div>

                    <div class="preview-box">
                        <span>Total Expense (This Month)</span>
                        <strong>Rs. 28,500</strong>
                    </div>

                    <div class="preview-box">
                        <span>Remaining Budget</span>
                        <strong>Rs. 16,500</strong>
                    </div>

                    <div class="preview-box">
                        <span>Next Reminder</span>
                        <strong>Electricity Bill</strong>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
